{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Saver",
  "version": "1.0",
  "description": "Save and select prompts for ChatGPT",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "privacy-policy.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}