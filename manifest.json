{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Saver",
  "version": "1.0",
  "description": "Save and select prompts for ChatGPT",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}